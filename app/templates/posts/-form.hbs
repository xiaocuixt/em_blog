<form class='form-horizontal' {{action "save" on="submit"}}>
  <div class="form-group">
    <label for="" class='col-sm-1 control-label'>标题</label>
    <div class="col-sm-4">
     {{input value=model.title placeholder="请输入标题" class='form-control'}}
    </div>
  </div>
  <div class="form-group">
    <label for="" class='col-sm-1 control-label'>内容</label>
    <div class="col-sm-6">
      {{textarea value=model.content cols=80 rows=6 placeholder="请输入内容" class='form-control'}}
    </div>
  </div>
  <div class="form-group">
    <label for="" class='col-sm-1 control-label'></label>
    <div class="col-sm-6">
      <input type="submit" value="保存" class="btn btn-primary">
    </div>
  </div>
</form>